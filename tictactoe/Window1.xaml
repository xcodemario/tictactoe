<Window x:Class="TicTacToe.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Choose Player" Height="450" Width="800">
    <Grid>
        <Label Content="Choose X or O to continue (X usually plays first)" 
               HorizontalAlignment="Center" VerticalAlignment="Top" 
               Margin="10,20,10,10"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
            <Image Source="img/tic-tac-toe_x.png" Height="100" Width="100"
                   Margin="10" MouseLeftButtonDown="Image_X_Click"/>
            <Image Source="img/tic-tac-toe_o.png" Height="100" Width="100"
                   Margin="10" MouseLeftButtonDown="Image_O_Click"/>
        </StackPanel>
    </Grid>
</Window>
